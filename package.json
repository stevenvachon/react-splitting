{
  "name": "react-splitting",
  "description": "A re-implementation of splitting.js for React supporting SSR/SSG.",
  "version": "1.0.0-rc17",
  "author": "Steven Vachon <contact@svachon.com> (https://svachon.com)",
  "repository": "github:stevenvachon/react-splitting",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": "./src/splitting/index.js",
    "./types": "./src/types.d.ts",
    "./with-meta": "./src/splittingWithMeta/index.js"
  },
  "dependencies": {
    "type-fest": "^5.4.4"
  },
  "peerDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/splitting": "^1.0.6",
    "@vitest/coverage-v8": "^4.0.18",
    "cssnano": "^7.1.2",
    "happy-dom": "^20.6.2",
    "htmlnano": "^3.1.0",
    "prettier": "^3.8.1",
    "splitting": "^1.1.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "scripts": {
    "build": "npm run build:lint && npm run build:typecheck && npm run build:compile",
    "build:compile": "tsc --project tsconfig.build.json && tsc-alias --outDir=src --resolve-full-paths --resolve-full-extension .js",
    "build:lint": "prettier --check '*.{json,md,ts,tsx}' '!coverage/**/*'",
    "build:typecheck": "tsc --project tsconfig.check.json && tsc --project tsconfig.check.jsx.json",
    "prepublishOnly": "npm run build && npm test",
    "test": "npm run test:watch -- --reporter=verbose --run",
    "test:watch": "vitest dev --coverage --coverage.exclude=src/testHelpers.tsx --coverage.reporter=html --coverage.reporter=lcov --coverage.reporter=text --environment=happy-dom --globals"
  },
  "files": [
    "src/constants.d.ts",
    "src/constants.js",
    "src/constants.js.map",
    "src/split.d.ts",
    "src/split.js",
    "src/split.js.map",
    "src/splitting/Component.d.ts",
    "src/splitting/Component.js",
    "src/splitting/Component.js.map",
    "src/splitting/function.d.ts",
    "src/splitting/function.js",
    "src/splitting/function.js.map",
    "src/splitting/index.d.ts",
    "src/splitting/index.js",
    "src/splitting/index.js.map",
    "src/splittingWithMeta/Component.d.ts",
    "src/splittingWithMeta/Component.js",
    "src/splittingWithMeta/Component.js.map",
    "src/splittingWithMeta/function.d.ts",
    "src/splittingWithMeta/function.js",
    "src/splittingWithMeta/function.js.map",
    "src/splittingWithMeta/index.d.ts",
    "src/splittingWithMeta/index.js",
    "src/splittingWithMeta/index.js.map",
    "src/types.d.ts"
  ],
  "keywords": [
    "animation",
    "char",
    "react",
    "split",
    "splitting",
    "text",
    "word"
  ]
}
